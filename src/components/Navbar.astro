---
interface Props {
    color: string;
    secondaryColor: string;
}
const { color, secondaryColor } = Astro.props;
---
<style define:vars={{ secondaryColor }}>
    nav.transition {
        height: 52px;
        background-color: var(--secondaryColor);
        transition: 0.8s all ease-out;
    }

    nav:not(.transition) {
        transition: 0.8s all ease-out;
    }
</style>
<nav class={`${color} opacity-95 px-7 font-manrope justify-between gap-5 hidden md:flex fixed inset-x-0 top-0 h-24 z-20 border-b border-slate-500 items-center`}>
        <a class="cursor-pointer font-bold hover:underline">HOME</a>
        <div class="flex flex-row gap-5">
            <a class="cursor-pointer font-bold hover:underline">FUCK</a>
            <a class="cursor-pointer font-bold hover:underline">THESE</a>
            <a class="cursor-pointer font-bold hover:underline">BUTTONS</a>
        </div>
    </nav>