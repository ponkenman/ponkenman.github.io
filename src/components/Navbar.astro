---
interface Props {
    color: string;
    secondaryColor: string|null;
}
const { color, secondaryColor } = Astro.props;
---
<style define:vars={{ secondaryColor }}>
    nav.transition {
        height: 32px;
        background-color: var(--secondaryColor);
        transition: 0.8s all ease-out;
    }

    nav:not(.transition) {
        transition: 0.8s all ease-out;
    }
</style>
<nav class={`${color} opacity-95 px-7 font-manrope justify-between gap-5 hidden md:flex fixed inset-x-0 top-0 h-12 z-20 border-b border-slate-400 items-center`}>
        <a class="cursor-pointer font-bold hover:underline">HOME</a>
        <div class="flex flex-row gap-5">
            <a class="cursor-pointer font-bold hover:underline" href="/reviews">REVIEWS</a>
            <a class="cursor-pointer font-bold hover:underline">GUIDES</a>
            <a class="cursor-pointer font-bold hover:underline">ABOUT</a>
        </div>
    </nav>